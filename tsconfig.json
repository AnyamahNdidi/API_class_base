{
  "compilerOptions": {
    "types": ["jest"],
    "target": "es2016",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "pretty": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@config": ["./config/*"],
      "@databases": ["databases"],
      "@utils/*": ["utils/*"],
      "@interfaces/*": ["interfaces/*"],
      "@models/*": ["models/*"],
      "@dtos/*": ["dtos/*"],
      "@services/*": ["services/*"],
      "@controllers/*": ["controllers/*"],
      "@routes/*": ["routes/*"],
      "@exceptions/*": ["exceptions/*"],
      "@middlewares/*": ["middlewares/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.json", ".env"],
  "exclude": ["node_modules", "src/tests", "src/logs"]
}